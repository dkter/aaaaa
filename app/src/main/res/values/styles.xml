<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorShadow">@color/colorShadow</item>
        <item name="colorSpaceBar">@color/colorSpaceBar</item>
    </style>

    <!--
        AppThemeLight and AppThemeDark should be identical to the light and
        dark modes of AppTheme.
        To be more specific, the values of AppThemeLight should be the same
        as the values of AppTheme here, and the values of AppThemeDark should
        be the same as the values of AppTheme in values-night/styles.xml
    -->

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorShadow">@color/colorShadow</item>
        <item name="colorSpaceBar">@color/colorSpaceBar</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorShadow">@color/colorShadowDark</item>
        <item name="colorSpaceBar">?attr/colorControlNormal</item>
    </style>

    <style name="AButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SpaceButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSpaceBar</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
